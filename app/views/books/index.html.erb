    <body>
       <p id="notice"></p><!--ここにsuccessfullyの文言が入る-->
       <h1 class="heading" >Books</h1>
     <table>
       <thead><!--テーブルの中のヘッドでTとhead。テーブルの行をグループ化する-->
         <tr><!--tablerowの略でテーブルの横方向を指定する-->
         <th>Title</th><!--tableのheader。見出しとなるセル-->
         <th>Body</th>
         <th colspan="3"></th><!--３つのセルを結合。なんでやるん？-->
        </tr>
       </thead>
       <tbody>
        <tr>
          <!--@book.title.bodyがメゾットエラーになり申した-->
         <% @books.each do |book| %>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", books_path %></td>
         <td><%= link_to "Edit", edit_book_path(book) %></td>
         <td><%= link_to "Destroy", book_path(book) %></td>
         <% end %>
        </tr>
       </tbody>
     </table>
     <h2>New book</h2>
     <p>ここにフォームの記載をする気がする</p>
     <h2>New book</h2>

     <%= form_with model:@book, local:true do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Body</h4>
     <%= f.text_area :body %>
     <%= f.submit 'Create Book' %>
     <% end %>

    </body>
