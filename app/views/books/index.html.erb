      <div class="all">
        <p id="notice"></p><!--ここにsuccessfullyの文言が入る-->
        <h1 class="heading" >Books</h1>
      <table>
        <thead><!--テーブルの中のヘッドでTとhead。テーブルの行をグループ化する-->
          <tr><!--tablerowの略でテーブルの横方向を指定する-->
          <th>Title</th><!--tableのheader。見出しとなるセル-->
          <th>Body</th>
          <th colspan="3"></th><!--３つのセルを結合。なんでやるん？-->
         </tr>
        </thead>
        <tbody>
           <!--@book.title.bodyがメゾットエラーになり申した-->
          <% @books.each do |book| %>
          <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td><%= link_to "Show", book_path(book) %></td>
           <td><%= link_to "Edit", edit_book_path(book) %></td>
           <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <h2>New book</h2>

      <%= form_with model:@book, local:true do |f| %>
       <div class="field">
        <label for="book_title">Title</lavel>
        <!--ラベルタグを使うことでidとかとの紐付けが出来るらしい-->
        <%= f.text_field :title %>
       </div>
       <div class="field">
        <lavel for="book_body">Body</lavel>
        <%= f.text_area :body %>
       </div>
       <div class="actions">
        <%= f.submit 'Create Book' %>
       </div>
      <% end %>
     </div>
