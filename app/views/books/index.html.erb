      <div class="all">
        <p id="notice"><%= notice %></p><!--ここにsuccessfullyの文言が入る-->
        <h1 class="heading" >Books</h1>
      <table>
        <thead><!--テーブルの中のヘッドでTとhead。テーブルの行をグループ化する-->
          <tr><!--tablerowの略でテーブルの横方向を指定する-->
          <th>Title</th><!--tableのheader。見出しとなるセル-->
          <th>Body</th>
          <th colspan="3"></th><!--３つのセルを結合。なんでやるん？-->
         </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td><%= link_to "Show", book_path(book) %></td>
           <td><%= link_to "Edit", edit_book_path(book) %></td>
           <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <h2>New book</h2>
           <% if @book.errors.any? %>
             <div id="error_explanation">
             <h2 class="error_m"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
             <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
             </ul>
             </div>
           <% end %>
      <%= form_with model: @book, local:true do |f| %>
       <div class="field">
        <%= f.label :Title %>
        <%= f.text_field :title %>
       </div>
       <div class="field">
        <%= f.label :Body %>
        <%= f.text_area :body %>
       </div>
       <div class="field">
        <%= f.submit 'Create Book' %>
       </div>
      <% end %>
     </div>