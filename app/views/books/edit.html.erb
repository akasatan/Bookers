<h1>Editing Book</h1>

<%= form_with model: @book, local:true do |f| %>
    <div class="field">
    <h4><%= f.label :title, 'Title' %></h4>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <h4><%= f.label :body, 'Body' %></h4>
    <%= f.text_area :body %>
    </div>
    <div class="field">
    <%= f.submit 'Create Book' %>
    </div>
    <%= link_to "Show", book_path(@book) %> |
    <%= link_to "Back", books_path %>

<% end %>