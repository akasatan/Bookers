<div class="all">
<h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <div id="error_explanation">
     <h2 class="error_m"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
       <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
       </ul>
    </div>
    <% end %>
    <%= form_with model: @book, local:true do |f| %>
    <div class="field">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <%= f.label :body, 'Body' %>
    <%= f.text_area :body %>
    </div>
    <div class="field">
    <%= f.submit 'Update Book' %>
    </div>
    <p class="hov"><%= link_to "Show", book_path(@book) %> |
    <%= link_to "Back", books_path %></p>
    <% end %>
</div>